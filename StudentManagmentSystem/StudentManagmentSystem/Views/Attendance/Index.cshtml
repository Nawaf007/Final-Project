@model IEnumerable<StudentManagmentSystem.Models.Attendance>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; font-weight:bold">Attendance</h2>
 
<p>
    @Html.ActionLink("Create New", "Create") | 
    @Html.ActionLink("Teacher Attendance", "Index", "TeacherAttendance")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Type
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date.Month)\@Html.DisplayFor(modelItem => item.Date.Day)\@Html.DisplayFor(modelItem => item.Date.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lookup.Values)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
