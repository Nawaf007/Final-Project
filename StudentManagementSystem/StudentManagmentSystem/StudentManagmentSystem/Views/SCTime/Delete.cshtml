@model StudentManagmentSystem.Models.SCTime

@{
    ViewBag.Title = "Delete";
}

<h2 style="text-align:center; font-weight:bold">Delete</h2>
<div>
    <h4 style="text-align:center; font-weight:bold">Section Course Time</h4>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Section Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SectionCourse.Section.Name)
        </dd>
        <dt>
            Time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeOfDay.TimeOfDay)
        </dd>

        <dt>
            Days
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lookup.Values)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "SCTime", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc })
        </div>
    }
</div>
