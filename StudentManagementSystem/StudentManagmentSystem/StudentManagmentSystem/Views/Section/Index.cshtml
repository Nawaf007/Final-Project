@model IEnumerable<StudentManagmentSystem.Models.Section>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; font-weight:bold">Sections</h2>

<p>
    @if(ViewBag.UserType == "Admin")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxCount)
        </th>
        <th>
            Class
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lookup.Values)
        </td>
        <td>
            @if (ViewBag.UserType == "Admin")
            {
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) <a> | </a>
            }
            @Html.ActionLink("Course", "Index", "SectionCourse", new { ids = item.Id }, null) 
            @if (ViewBag.UserType == "Admin" || ViewBag.UserType == "Teacher")
            {
                <a> | </a>@Html.ActionLink("Student", "Index", "SectionStudent", new { ids = item.Id }, null)
            }
            @if (ViewBag.UserType == "Admin")
            {
                <a> | </a> @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
