@model StudentManagmentSystem.Models.SectionCourse

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center; font-weight:bold">Edit</h2>

@using (Html.BeginForm("Edit", "SectionCourse", new { idc = ViewBag.idc, ids = ViewBag.ids, idt = ViewBag.idt }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center; font-weight:bold">Section Course</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        @if (ViewBag.ids == null && ViewBag.idc == null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.SectionId, "Section Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SectionId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SectionId)
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.CourseId, "Course Title", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CourseId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CourseId)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("CourseId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
            @Html.DropDownList("SectionId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }


        @if (ViewBag.idt == null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.TeacherId, "Teacher User Name", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("TeacherId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TeacherId)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("TeacherId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }




        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { idc = ViewBag.idc, ids = ViewBag.ids, idt = ViewBag.idt })
</div>
