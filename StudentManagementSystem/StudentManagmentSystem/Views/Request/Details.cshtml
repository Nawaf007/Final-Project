@model StudentManagmentSystem.Models.Request

@{
    ViewBag.Title = "Details";
    Html.Raw("<pre>" + Html.Encode(Model) + "</pre>");
}

<h2 style="text-align:center; font-weight:bold">Details</h2>

<div>
    <h4 style="text-align:center; font-weight:bold">Request</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Topic)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Topic)
        </dd>
        @if (@Html.DisplayFor(model => model.AspNetUser1.Id).ToString() != "")
        {
            if(ViewBag.UserType == "Admin")
            {
                <dt>
                    Acknowledged By
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AspNetUser1.UserName)
                </dd>
                <dt>
                    Requested From
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AspNetUser.UserName)
                </dd>
            }
            else
            {
                <dt>
                    Acknowledged By
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AspNetUser1.FirstName) @Html.DisplayFor(model => model.AspNetUser1.LastName)
                </dd>
            }
        }
        else
        {
            <dd>
                None
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = "5", @readonly = "readonly" })
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
