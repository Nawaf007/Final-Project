@model IEnumerable<StudentManagmentSystem.Models.TeacherAttendance>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; font-weight:bold">Teacher Attendance</h2>
<p>
    @if (ViewBag.Showt == false)
    {
        @Html.ActionLink("Back to Teacher", "Index", "Teacher")
    }
    @if (ViewBag.Showa == false)
    {
        @Html.ActionLink("Back to Attendance", "Index", "Attendance")
    } |
    @Html.ActionLink("Create New", "Create", new { idt = ViewBag.idt, ida = ViewBag.ida })
</p>
<table class="table">
    <tr>
        @if(ViewBag.Showt == true)
        {
            <th>
                @Html.DisplayNameFor(model => model.Teacher.AspNetUser.UserName)
            </th>
        }
        @if(ViewBag.Showa == true)
        {
            <th>
                @Html.DisplayNameFor(model => model.Attendance.Date)
            </th>
        }
        <th>
            Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if(ViewBag.Showt == true)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.AspNetUser.UserName)
            </td>
        }
        @if(ViewBag.Showa == true)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Attendance.Date.Month)/@Html.DisplayFor(modelItem => item.Attendance.Date.Day)/@Html.DisplayFor(modelItem => item.Attendance.Date.Year)
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Lookup.Values)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, ida = ViewBag.Ida, idt = ViewBag.idt }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, ida = ViewBag.Ida, idt = ViewBag.idt })
        </td>
    </tr>
}

</table>
