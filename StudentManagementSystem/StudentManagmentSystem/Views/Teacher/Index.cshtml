@model IEnumerable<StudentManagmentSystem.Models.RegisterViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center; font-weight:bold">Teacher</h2>

<p>
    @Html.ActionLink("Create New", "RegisterTeacher", "Account")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            User Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRegisterTeacher", "Account", new { @idd = item.Id }, null) |
            @Html.ActionLink("Attendance", "Index", "TeacherAttendance", new { idt = item.Id}, null) | 
            @Html.ActionLink("Salary", "Index", "SalaryPaid", new { idt = item.Id }, null) | 
            @Html.ActionLink("Details", "Details", new { id=item.Id }) | 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
