@model StudentManagmentSystem.Models.Assignment

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center; font-weight:bold">Edit</h2>

@using (Html.BeginForm("Edit", "Assignment", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc }, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center; font-weight:bold">Assignment</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.FilePath)
        <a>
            @ViewBag.WError
        </a>
        @if (ViewBag.idsc == null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.SCId, "SCId", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SCId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SCId)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("SCId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DueDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DueDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Status", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Status", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TotalMarks, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.TotalMarks, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TotalMarks)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Weightage, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Weightage, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Weightage)
            </div>
        </div>

        <div>
            <label for="file" class="control-label col-md-12">Upload File:</label>
            <input type="file" name="file" id="file" class="control-label col-md-12" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc })
</div>
