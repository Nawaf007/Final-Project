@model StudentManagmentSystem.Models.Assignment

@{
    ViewBag.Title = "Delete";
}

<h2 style="text-align:center; font-weight:bold">Delete</h2>
<div>
    <h4 style="text-align:center; font-weight:bold">Assignment</h4>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DueDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DueDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalMarks)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalMarks)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weightage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weightage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FilePath)
        </dt>

        @if (Html.DisplayFor(model => model.FilePath).ToString() == " ")
        {
            <dd>
                No File
            </dd>
        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.FilePath)
            </dd>
        }

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lookup.Values)
        </dd>

        <dt>
            Section Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SectionCourse.Section.Name)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Assignment", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc })
        </div>
    }
</div>
