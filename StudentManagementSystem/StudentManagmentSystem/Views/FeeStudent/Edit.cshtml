@model StudentManagmentSystem.Models.FeesStudent

@{
    ViewBag.Title = "Edit";
}

<h2 style="text-align:center; font-weight:bold">Edit</h2>

@using (Html.BeginForm("Edit", "FeeStudent", new { idf = ViewBag.idf, ids = ViewBag.ids }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center; font-weight:bold">Fees Student</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.DropDownList("FeeId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        @Html.DropDownList("StudentId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        <div class="form-group">
            @Html.LabelFor(model => model.AmountPaid, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AmountPaid)
                @Html.ValidationMessageFor(model => model.AmountPaid)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SubmitDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubmitDate)
                @Html.ValidationMessageFor(model => model.SubmitDate)
            </div>
        </div>

        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { ids = ViewBag.ids, idf = ViewBag.idf })
</div>
