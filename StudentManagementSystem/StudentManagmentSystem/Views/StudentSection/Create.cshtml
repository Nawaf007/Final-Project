@model StudentManagmentSystem.Models.SSExam

@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center; font-weight:bold">Create</h2>

@using (Html.BeginForm("Create", "StudentSection", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc, ide = ViewBag.ide, idss = ViewBag.idss }, FormMethod.Post, null)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center; font-weight:bold">Section Student Exam</h4>
        <hr />
        @Html.ValidationSummary(true)
        <a>
            @ViewBag.Error
        </a>
        @if(ViewBag.idss == null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.SSId, "Registration No.", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("SSId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.SSId)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("SSId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }
        @if(ViewBag.ide == null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.ExamId, "Type", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ExamId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ExamId)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("ExamId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }
        <div class="form-group">
            @Html.LabelFor(model => model.ObtainedMarks, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ObtainedMarks, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ObtainedMarks)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { idsc = ViewBag.idsc, ids = ViewBag.ids, idc = ViewBag.idc, ide = ViewBag.ide, idss = ViewBag.idss })
</div>
