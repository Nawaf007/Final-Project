@model IEnumerable<StudentManagmentSystem.Models.RegisterViewModel>

@{
    ViewBag.Title = "Students";
}

<h2 style="text-align:center; font-weight:bold">Students</h2>

<p>
    @Html.ActionLink("Create New", "RegisterStudent", "Account")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationNo)
        </th>
        <th>
            User Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditRegisterStudent", "Account", new { @idd = item.Id }, null) |
            @Html.ActionLink("Attendance", "Index", "StudentAttendance", new { idt = item.Id }, null) | 
            @Html.ActionLink("Fees", "Index", "FeeStudent", new { ids = item.Id }, null) | 
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
