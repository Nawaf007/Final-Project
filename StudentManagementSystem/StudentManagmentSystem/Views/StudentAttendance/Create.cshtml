@model StudentManagmentSystem.Models.StudentAttendance

@{
    ViewBag.Title = "Create";
}

<h2 style="text-align:center; font-weight:bold">Create</h2>

@using (Html.BeginForm("Create", "StudentAttendance", new { ida = ViewBag.ida, idt = ViewBag.idt}, FormMethod.Post, null)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 style="text-align:center; font-weight:bold">Student Attendance</h4>
        <hr />
        @Html.ValidationSummary(true)

        @if (ViewBag.Showa == true)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.AttendanceId, "Date", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("AttendanceId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.AttendanceId, (string)ViewBag.AttendanceStatus)
                </div>
            </div>
        }
        else
        {
            @Html.DropDownList("AttendanceId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }

        @if (ViewBag.Showt == true)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.StudentId, "Registration No", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("StudentId", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StudentId, (string)ViewBag.RegNoStatus)
                </div>
            </div>

        }
        else
        {
            @Html.DropDownList("StudentId", null, String.Empty, new { @class = "form-control", style = "visibility:hidden" })
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.Status, "Status", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Status", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { ida = ViewBag.ida, idt = ViewBag.idt })
</div>
