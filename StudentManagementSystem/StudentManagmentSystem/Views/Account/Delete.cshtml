@model StudentManagmentSystem.Models.AspNetUser

@{
    ViewBag.Title = "Delete";
}

<h2 style="text-align:center; font-weight:bold">Delete</h2>
<div>
    <h4 style="text-align:center; font-weight:bold">AspNetUser</h4>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Admin)
        </dt>

        @if (Html.DisplayFor(model => model.Teacher).ToString() != "")
        {
            <dd>
                Teacher
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Teacher.Salary)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Teacher.Salary)
            </dd>
        }
        else if (Html.DisplayFor(model => model.Student).ToString() != "")
        {
            <dd>
                Student
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Student.RegistrationNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Student.RegistrationNo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Student.EnrollementDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Student.EnrollementDate)
            </dd>
        }
        else
        {
            <dd>
                Admin
            </dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Gender
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lookup.Values)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
