@model StudentManagmentSystem.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="wrap-login100">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form form-horizontal", role = "form" }))
        { @Html.AntiForgeryToken() 
            <span class="login100-form-logo">
                <i class="zmdi zmdi-landscape"></i>
            </span>

            <span class="login100-form-title p-b-34 p-t-27">
                @ViewBag.Title
            </span>
            <div class="p-b-20 p-b-16">
                <div class="label-warning" style="text-align:center">
                    @Html.ValidationSummary(true)
                </div>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Enter username">
                @Html.TextBoxFor(m => m.UserName, new { @class = "input100 col-md-12", type = "text", name = "username", placeholder = "Username"})
                <span class="focus-input100" data-placeholder="&#xf207;"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate="Enter password">
                @Html.TextBoxFor(m => m.Password, new { @class = "input100 col-md-12", type = "password", name = "pass", placeholder = "Password" })
                <span class="focus-input100" data-placeholder="&#xf191;"></span>
            </div>

            <div class="contact100-form-checkbox">
				<input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
				<label class="label-checkbox100" for="ckb1">
					Remember me
				</label>
			</div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn" type="submit" value="Log in">
                    Login
                </button>
            </div>
        }
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}